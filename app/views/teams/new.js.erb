var teamsList = $('#teams-list');
var teamField = teamsList.find('.new-team-input');

if (teamField.length) {
  $('[class*="ls-alert"]').remove();

  <% flash.now[:notice] = raw t('teams.new.new_team_warning') %>
  $('.ls-title-intro').after("<%= j render partial: 'shared/flash_messages' %>");

  locastyle.dismiss.init();
} else {
  teamsList.append("<%= j render partial: 'form' %>");

  function cancelNewteam() {
    $('.cancel-new-team').on('click', function(e) {
      e.preventDefault();
      $(this).closest('.ls-list').remove();
    });
  }

  cancelNewteam();
}
