<div class="ls-topbar ">
  <div class="ls-notification-topbar">
    <div data-ls-module="dropdown" class="ls-dropdown ls-user-account">
      <a href="#" class="ls-ico-user">
        <img src="<%= current_user.gravatar_url %>" alt="">
        <span class="ls-name"><%= current_user.name %></span>
        (<%= current_user.username %>)
      </a>

      <nav class="ls-dropdown-nav ls-user-menu" aria-hidden="true">
        <ul>
          <li><%= link_to t('logout'), destroy_user_session_path %></li>
        </ul>
      </nav>
    </div>
  </div>

  <span class="ls-show-sidebar ls-ico-menu"></span>

  <h1 class="ls-brand-name">
    <a class="ls-ico-earth">
      <% if current_user.team.present? %>
        <small><%= t('hefesto') %></small>
        <%= current_user.team.name %>
      <% else %>
        <small><%= t('hefesto_slogan') %></small>
        <%= t('hefesto') %>
      <% end %>
    </a>
  </h1>

  <span class="ls-show-notifications ls-ico-question"></span>
</div>
