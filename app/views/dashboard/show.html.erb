<%= render 'layouts/topbar' %>
<%= render 'layouts/sidebar' %>

<main class="ls-main">
  <div class="container-fluid">
    <h1 class="ls-title-intro ls-ico-dashboard">Dashboard</h1>
    <% flash.each do |key, value| %>
      <div class="<%= locastyle_class_for_alert(key) %> ls-dismissable">
        <span data-ls-module="dismiss" class="ls-dismiss">&times;</span>
        <%= value %>
      </div>
    <% end %>

    <div class="ls-box ls-board-box">
      <header class="ls-info-header">
        <h2 class="ls-title-3">Informações Gerais</h2>
      </header>

      <div id="sending-stats" class="row">
        <div class="col-sm-6 col-md-4">
          <div class="ls-box">
            <div class="ls-box-head">
              <h6 class="ls-title-4">Quantidade de HOs Feitos</h6>
            </div>

            <div class="ls-box-body">
              <span class="ls-board-data">
                <strong>1 <small>milhão</small></strong>
              </span>
            </div>

            <div class="ls-box-footer"></div>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="ls-box">
            <div class="ls-box-head">
              <h6 class="ls-title-4">Próximo HO</h6>
            </div>

            <div class="ls-box-body">
              <span class="ls-board-data">
                <strong>26/10/1987</strong>
              </span>
            </div>

            <div class="ls-box-footer">
              <a href="#" class="ls-btn ls-btn-danger ls-btn-xs">Cancelar</a>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="ls-box">
            <div class="ls-box-head">
              <h6 class="ls-title-4">Quantidade de HOs Agendados</h6>
            </div>

            <div class="ls-box-body">
              <span class="ls-board-data">
                <strong>10</strong>
              </span>
            </div>

            <div class="ls-box-footer">
              <a href="#" class="ls-btn ls-btn-xs">Visualizar datas</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="ls-box ls-board-box">
      <header class="ls-info-header">
        <h2 class="ls-title-3">Calendário</h2>
      </header>

      <%= month_calendar do |date| %>
        <button class="modal-button" data-ls-module="modal" data-target="#newHomeOfficeModal"><%= date %></button>
      <% end %>
    </div>
  </div>

  <div class="ls-modal" id="newHomeOfficeModal">
    <%= form_for @home_office do |f| %>
      <div class="ls-modal-box">
        <div class="ls-modal-header">
          <button data-dismiss="modal">&times;</button>
          <h4 class="ls-modal-title">Novo HO</h4>
        </div>
        <div class="ls-modal-body" id="myModalBody">
          <p>Deseja marcar HO neste dia?</p>
        </div>
        <div class="ls-modal-footer">
          <button type="button" class="ls-btn ls-float-right" data-dismiss="modal">Fechar</button>
          <button type="submit" class="ls-btn-primary">Confirmar</button>
        </div>
      </div>
      <%= f.hidden_field :date %>
    <% end %>
  </div>
  <%= render 'layouts/footer' %>
</main>
